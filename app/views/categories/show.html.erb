<div class="container">
  <br>
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><%= link_to "ホーム", root_path %></li>
      <li class="active breadcrumb-item" aria-current="page"><%= @university.name %></li>
    </ol>
  </nav>
  <div class="nav-scroller py-1 mb-2">
    <nav class="nav d-flex flex-row">
      <% @categories.each do |category| %>
        <%= link_to(category.category_name, "/universities/#{@university.id}/categories/#{category.id}", class: "p-2 text-muted") %>
      <% end %>
    </nav>
  </div>

  <!--  <div class="jumbotron p-3 p-md-5 text-white rounded bg-dark">-->
  <!--    <div class="col-md-6 px-0">-->
  <!--      <h1 class="display-4 font-italic"><%#= @university.name %></h1>-->
