<div class="center jumbotron" id="articles-background">
  <h2>
    <%= @university.name %>
  </h2>
  <ol class="breadcrumb">
  	<li>
      <%= link_to(@university.name, "/universities/#{@university.id}") %>
    </li>
    <li class="active">
      <%= @category.category_name %>
    </li>
  </ol>
  <div class = "main">
    <div class = "category">
      <ul class="list-group">
        <li　class="list-group-item">カテゴリ</li>
        <% @categories.each do |c| %>
          <li class="list-group-item">
            <%= link_to(c.category_name, "/universities/#{@university.id}/categories/#{c.id}") %>
          </li>
        <% end %>
        <!--
        カテゴリ実装の優先順位
        1.持物、準備、授業、寮、体験談、文化、生活、
        2.旅行、買物,イベント、交通
      　-->
      </ul>
    </div>
    <ul class = "articles list-group">
      <% @articles.each do |article| %>
        <li class="list-group-item" id="article-<%= article.id %>" >
            <span id="subject"><%= article.subject%></span>
            <br />
            <span><%= article.content%></span>
            <br />
            <%= link_to "もっと見る", article.url %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
