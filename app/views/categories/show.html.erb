  <!--      <p class="lead mb-0"><a href="#" class="text-white font-weight-bold">To official site...</a></p>-->
  <!--    </div>-->
  <!--  </div>-->


  <div class="row">
    <div class="col-md-12 ">
      <div class="card-deck">
        <% @articles.each do |article| %>
          <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
              <% if article.picture.present? %>
                <%= image_tag article.picture,class: "bd-placeholder-img card-img-top",width:"100%", height: "225" %>
              <% else %>
                <%= image_tag "sweden.jpg",class: "bd-placeholder-img card-img-top",width:"100%", height: "225" %>
              <% end %>
              <div class="card-body">
                <h5 class="card-title"><%= article.subject%></h5>
                <p class="card-text"><%= truncate(article.content, length: 85)%></p>
                <p class="card-text"><%= link_to "もっと見る", article.url, target: "_blank" %></p>
                <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-group">
                    <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                    <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                  </div>
                  <small class="text-muted">9 mins</small>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <%= will_paginate(@articles, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer, class:"pagination justify-content-center") %>
    </div>
  </div>
</div>
