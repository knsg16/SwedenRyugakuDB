<div class="center jumbotron" id="articles-background">
  <h2>アドミン</h2>
  <ol class="breadcrumb">
    <li><a href="/article">記事一覧</a></li>
    <li>記事詳細</li>
  </ol>
  <div class="panel panel-default">
    <%= bootstrap_form_for @article do |f| %>
 	    <div class="panel-body"><%= f.text_field :id %></div>
      <div class="panel-body"><%= f.text_field :subject %></div>
      <div class="panel-body"><%= f.text_area :content, rows: "10"  %></div>
      <div class="panel-body"><%= f.text_field :url %></div>
      <div class="panel-body">
        <%= f.fields_for :article_universities do |au| %>
          <%= au.collection_select(:university_id, University.all, :id, :name, {:class => "form-control input-lg"}) %>
        <% end %>
      </div>
      <div class="panel-body">
        <%= f.fields_for :article_categories do |ac| %>
          <%= ac.collection_select(:category_id, Category.all, :id, :category_name, {:class => "form-control input-lg"}) %>
        <% end %>
      </div>
      <%= f.submit "変更" , class: "btn btn-primary float-right" %>
	  <% end %>
  </div>
</div>
